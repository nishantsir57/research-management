rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function userDoc(uid) {
      return get(/databases/$(database)/documents/users/$(uid));
    }

    function userRole() {
      return request.auth != null ? userDoc(request.auth.uid).data.role : null;
    }

    function isAdmin() {
      return userRole() == 'admin';
    }

    function isStudent() {
      return userRole() == 'student';
    }

    function isReviewer() {
      return userRole() == 'reviewer';
    }

    function isApprovedReviewer() {
      return isReviewer() && userDoc(request.auth.uid).data.approvedReviewer == true;
    }

    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    match /users/{userId} {
      allow read: if isAdmin() || isOwner(userId);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);
      allow delete: if false;
    }

    match /departments/{deptId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /researchPapers/{paperId} {
      allow read: if true;
      allow create: if isStudent() && request.resource.data.authorId == request.auth.uid;

      allow update: if isAdmin()
        || (isOwner(resource.data.authorId) && request.resource.data.authorId == resource.data.authorId)
        || (isApprovedReviewer() && resource.data.assignedReviewerId == request.auth.uid);

      allow delete: if isAdmin() || isOwner(resource.data.authorId);
    }

    match /paperComments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow delete: if isAdmin() || isOwner(resource.data.authorId);
    }

    match /connections/{connectionId} {
      allow read: if isOwner(resource.data.userA) || isOwner(resource.data.userB) || isAdmin();
      allow create: if request.auth != null && request.resource.data.userA == request.auth.uid;
      allow update, delete: if isAdmin() || isOwner(resource.data.userA) || isOwner(resource.data.userB);
    }

    match /discussions/{discussionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin() || isOwner(resource.data.createdBy);
    }

    match /discussionMessages/{messageId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;
      allow delete: if isAdmin() || isOwner(resource.data.createdBy);
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
